@{
    ViewBag.Title = "ContactUs";
}

 
<h2>ContactUs</h2>

<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("ContactUs", "Index", FormMethod.Post, new { enctype = "multipart/form-data" }))
