<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - scrumptious</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .custom-white-text {
            color: white;         
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("scrumptious", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="切換導覽" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("首頁", "Index", "Index", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("開始點餐", "Products", "Index", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("餐點類別", "Index", "Categories", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("聯絡我們", "Index", "ContactUs", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                <div class="memberNav">
                    <ul class="navbar-nav flex-grow-1">
                        @Html.ActionLink("登入會員", "Login", "Index")
                        @Html.ActionLink("註冊會員", "Register", "Members", new { area = "" }, new { @class = "nav-link custom-white-text" })
                        @Html.ActionLink("購物車", "Cart", "Index")
                    </ul>
                </div>
            </div>
        </div>

    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - scrumptious</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="assets/js/main.js"></script>
    <script src="js/jquery.3.6.4.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
